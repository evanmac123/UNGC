<div class="form-group {{if field.hasErrors "has-error"}}">
  <label class="control-label" for={{uid}}>
    {{field.label}}
  </label>

  {{select-2
    class="form-control"
    optionValuePath="id"
    optionLabelPath="label"
    placeholder="Theme"
    id=field.uid
    content=items
    value=field.value}}

  {{#if field.errors}}
    <p class="help-block">{{field.errors.firstObject.detail}}</p>
  {{/if}}
</div>
