<div class="form-group {{if field.hasErrors "has-error"}}">
  <label class="control-label col-sm-2" for={{field.uid}}>
    {{field.label}}
  </label>
  <div class="col-sm-10">
    {{#with field.items as |items|}}
      {{select-2
      content=items
      optionLabelPath=field.labelPath
      optionValuePath="id"
      placeholder=field.placeholder
      value=field.value
      }}
    {{/with}}
  </div>
{{#if field.errors}}
<p class="col-sm-offset-2 help-block">{{field.errors.firstObject.detail}}</p>
{{/if}}
</div>
