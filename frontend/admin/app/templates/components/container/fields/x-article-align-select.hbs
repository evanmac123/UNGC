<div class="form-group {{if field.hasErrors "has-error"}}">
  <label class="control-label" for={{uid}}>
    {{field.label}}
  </label>

  {{fast-select
    class="form-control"
    valuePath="id"
    id=field.uid
    items=items
    value=field.value}}

  {{#if field.errors}}
    <p class="help-block">{{field.errors.firstObject.detail}}</p>
  {{/if}}
</div>
