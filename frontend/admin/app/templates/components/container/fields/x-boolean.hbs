<div class="form-group {{if field.hasErrors "has-error"}}">
  <div class="col-sm-offset-2 col-sm-10">
    <div class="checkbox">
      <label>
        {{input type="checkbox" checked=field.value}}
        {{field.label}}
      </label>
    </div>
  </div>
  {{#if field.errors}}
    <p class="col-sm-offset-2 help-block">{{field.errors.firstObject.detail}}</p>
  {{/if}}
</div>
