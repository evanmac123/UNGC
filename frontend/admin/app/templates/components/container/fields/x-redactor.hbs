<div class="form-group {{if field.hasErrors "has-error"}}">
  <label class="control-label" for={{field.uid}}>
    {{field.label}}
  </label>

  {{ivy-redactor value=field.value
                 formatting=formatting
                 minHeight=minHeight
                 pastePlainText=true
                 plugins=plugins
                 buttons=buttons}}

  {{#if field.errors}}
    <p class="help-block">{{field.errors.firstObject.detail}}</p>
  {{/if}}
</div>
