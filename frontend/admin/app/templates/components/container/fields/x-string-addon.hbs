<div class="form-group {{if field.hasErrors "has-error"}}">
  <div class='input-group'>
    <label class='input-group-addon' for={{field.uid}}>{{field.label}}</label>
    {{input type="text"
      class="form-control"
      id=field.uid
      value=field.value}}
  </div>

  {{#if field.errors}}
    <p class="help-block">{{field.errors.firstObject.detail}}</p>
  {{/if}}
</div>
