<div class="form-group {{if field.hasErrors "has-error"}}">
  <label class="control-label" for={{field.uid}}>
    {{field.label}}
  </label>

  <div class='input-group'>
    <span class='input-group-addon'>URL:</span>
    {{input type="text"
      class="form-control"
      id=field.uid
      value=field.value}}
  </div>

  {{#if field.errors}}
    <p class="help-block">{{field.errors.firstObject.detail}}</p>
  {{/if}}
</div>
