{{#if array}}
  {{#if canVary}}
    <button class="btn btn-success" disabled={{cantAdd}} {{action "addElement"}}>Add</button>
  {{/if}}
  <hr>

  {{#each yieldValue as |val|}}
    {{#if canVary}}
      <button class="btn btn-warning" disabled={{cantRemove}} {{action "removeElement" val}}>Remove</button>
    {{/if}}
    {{yield val}}
  {{/each}}
{{else}}
  {{yield yieldValue}}
{{/if}}
