{{#container/x-scope data=model.container.data as |data|}}
  <fieldset>
    <legend>Hero</legend>
    {{#container/x-scope key="hero" data=data as |d|}}
      {{container/x-field key="image" type="image-upload" data=d}}
      {{container/x-field key="theme" type="hero-theme-select" data=d}}
      {{container/x-field key="title" type="string" array=true min=2 max=2 data=d}}
      {{container/x-field key="blurb" type="string" data=d}}
      {{container/macros/x-link key="link" data=data}}
      {{container/x-field key="showIssuesNav" label="Show issues nav" type="boolean" default=true data=d}}
    {{/container/x-scope}}
  </fieldset>

  <fieldset>
    <legend>Stats</legend>
    {{#container/x-scope tagName="ol" key="stats" array=true min=3 max=3 data=data as |d|}}
      <li class="stat-group">
        {{container/x-field key="value" type="string" data=d}}
        {{container/x-field key="label" type="string" data=d}}
      </li>
    {{/container/x-scope}}
  </fieldset>

  <fieldset>
    <legend>Tiles</legend>
    {{#container/x-scope tagName="ol" key="tiles" array=true min=3 max=8 data=data as |d|}}
      <li class="tile-group">
        {{container/x-field key="color" type="tile-color-select" data=d}}
        {{container/x-field key="bgImage" type="image-upload" data=d}}
        {{container/x-field key="title" type="string" data=d}}
        {{container/macros/x-link key="link" data=data}}
        {{container/x-field key="doubleWidth" type="boolean"}}
        {{container/x-field key="doubleHeight" type="boolean"}}
      </li>
    {{/container/x-scope}}
  </fieldset>

  <fieldset>
    <legend>Feature Event</legend>
    <p>
      <em>You can choose the current featured event from the Events panel.</em>
    </p>
  </fieldset>
{{/container/x-scope}}
