<x-modal close="dismiss">
  <div class="modal-body">
      <div class="form-group clearfix">
        {{#sitemap/validated-form-field label='Page name (with dashes)'
        name='slug'
        errors=model.container.errors}}
          {{input class="form-control" id="slug" value=model.container.slug}}
        {{/sitemap/validated-form-field}}

      </div>
      <div class="form-group">
        <label for="layout" class="control-label">
          Layout
        </label>
        {{fast-select
            items=model.layouts
            value=model.container.layoutRecord.id
            labelPath="label"
            valuePath="id"
            class="form-control"
            id="layout"}}
      </div>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal" {{action "dismiss" model.container.id}}>Cancel</button>
    <button type="button" class="btn btn-primary" {{action "saveContainer" model.container}}>Edit Page</button>
  </div>

  {{!-- XXX position absolute for these --}}
  {{#each flashMessages.queue as |flash|}}
    {{flash-message flash=flash}}
  {{/each}}
</x-modal>
