# sphinx gotcha: it is very important that encoding: utf8 is specified in order for thinking sphinx to pass utf8 options.

development:
  adapter: mysql2
  database: unglobalcompact_dev
  encoding: utf8
  collation: utf8_general_ci
  username: root

test:
  adapter: mysql2
  database: unglobalcompact_test
  encoding: utf8
  collation: utf8_general_ci
  username: root
