- @title = 'Tools and Resources | ' + @resource.title
- if @resource.image.present?
  .resource-show-img
    = retina_image @resource, :show, title: @resource.title

.resource-show-body
  %h3= @resource.title
  %p
    = @resource.description
    = "(#{@resource.year.year})" unless @resource.year.blank?


  .resource-show-details
    - if @resource.principles.any?
      %dl
        %dt= "Topic".pluralize(@resource.principles.count)
        %dd
          %ul
            - @resource.principles.each do |topic|
              %li
                = link_to topic.name, resources_path(commit: "search", resource_search: {topic: {principle_ids: [topic.id]}})

    - if @resource.authors.any?
      %dl
        %dt= "Author".pluralize(@resource.authors.count)
        %dd
          %ul
            - @resource.authors.each do |author|
              %li
                = link_to author.full_name, resources_path(commit: "search", resource_search: {author: [author.id]})

    - if @resource.links.any?
      %dl
        %dt= "Link".pluralize(@resource.links.count)      
        %dd
          %ul
            - @resource.links.each do |link|
              %li.link= render link
