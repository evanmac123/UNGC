#resources_search

  = form_tag nil, method: 'get', class: 'resources_search' do
    %fieldset
      %legend Main Search
      %dl
        %dt
          %label Keywords
        %dd
          = text_field_tag 'resource_search[keyword]', @search.keyword
      %dl
        %dt
          %label Language
        %dd
          = select_tag 'resource_search[language]', languages_for_select(@search.language), include_blank: true, multiple: true
      %dl
        %dt
          %label Authors
        %dd
          = select_tag 'resource_search[author]', options_from_collection_for_select(@authors, 'id', 'full_name',selected: @search.author), multiple: true

    %fieldset
      %legend Search by Topic
      = render '/shared/topics_menu', prefix: 'resource_search[topic]', topics: @topics, topics_ids: @search.topic_ids

    %p{:style => 'text-align: right; display: block;'}= submit_tag 'Search'
