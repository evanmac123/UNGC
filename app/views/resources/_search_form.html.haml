#resources_search
  %h1 Find Resources

  = form_tag nil, method: 'get', class: 'resources_search' do
    = hidden_field_tag 'commit', 'Search'
    %fieldset.resources-main
      %legend Main Search
      %dl
        %dt
          %label Keywords
        %dd
          = text_field_tag :keyword, params[:keyword]
      %dl
        %dt
          %label Language
        %dd
          = select_tag :language, languages_for_select(params[:language]), include_blank: true
      %dl
        %dt
          %label Authors
        %dd
          = select_tag(:author, options_from_collection_for_select(@authors, 'id', 'full_name',selected: params[:author]), multiple: true)

    %fieldset
      %legend Search by Topic
      = render '/shared/topics_menu', prefix: 'topic', topics: @topics, topics_ids: @topic_ids

    %p{:style => 'text-align: right; display: block;'}= submit_tag 'Search'
