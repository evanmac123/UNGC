%h1 Log In

- form_tag session_path do 
  %p
    = label_tag :login
    %br/
    = text_field_tag :login
  %p
    = label_tag :password
    %br/
    = password_field_tag :password
  %p
    = label_tag 'remember_me', 'Remember me'
    = check_box_tag 'remember_me', '1', @remember_me
    
  %p= submit_tag 'Log in'
  
= link_to 'forgot your password?', new_password_path