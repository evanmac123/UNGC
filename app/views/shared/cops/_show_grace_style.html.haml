= render :partial => '/shared/cops/cop_info_header', :locals => { :communication_on_progress => communication_on_progress }
%dt Grace Letter
%dd
  %ul
    %li== COP due date was extended until #{yyyy_mm_dd communication_on_progress.ends_on}
- if communication_on_progress.has_files?
  %dt Files
  %dd
    %ul
      - communication_on_progress.files.each do |file|
        %li
          = link_to truncate(file.attachment_file_name, :length => 60), file.attachment.url, target: '_blank'
          == (#{file.language.name})
