%p
%a{:name => 'paged_results'}

%div.clearfix
  %div.left
    %strong
      Number of participants:
      = count_all_orgs(:expelled_for_failure_to_communicate_progress)

  %div.right= per_page_select

%p &nbsp;

%table{:class => 'striped sortable', :width => '100%', :cellpadding => '0', :cellspacing => '0'}
  %thead
    %tr
      %th{:class => 'sort'} Participant
      %th{:class => 'sort'} Sector
      %th{:class => 'sort'} Country
      %th{:class => 'sort'} Expelled
  %tbody
    - for organization in paged_organizations(:expelled_for_failure_to_communicate_progress)
      %tr
        %td{:title => organization.name}= link_to truncate(organization.name, :length => 40), participant_link(organization, :expelled)
        %td{:title => organization.sector_name}= truncate(organization.sector_name, :length => 30)
        %td{:title => organization.country_name}= truncate(organization.country_name, :length => 15)
        %td= yyyy_mm_dd organization.delisted_on

= paginate_orgs(:expelled_for_failure_to_communicate_progress, :anchor => 'paged_results')
