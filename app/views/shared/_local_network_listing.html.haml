%table{:class => 'striped sortable', :width => '100%', :cellpadding => '0', :cellspacing => '0'}
  %thead
    %tr
      %th{:class => 'sort'} Name
      %th{:class => 'sort'} Region
      - unless state == :emerging
        %th{:class => 'sort'} Launched
  %tbody
    - for local_network in LocalNetwork.where_state(state)
      %tr
        %td{:title => local_network.name}= link_to_public_profile(local_network)
        %td= local_network.region_name
        - unless state == :emerging
          %td= local_network.sg_local_network_launch_date
