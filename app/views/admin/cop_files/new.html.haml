%h3 Add Files
%h4= @submodel.title
= form_tag upload_attachment_path, :multipart => true do
  %fieldset.file_inputs
    %ol
      %li
        = file_field_tag 'uploaded_attachments[][attachment]'
        = select_tag 'uploaded_attachments[][language_id]', language_options(Language.default_language_id)

  %ul{:class => "tools inline", :style => 'float: right;'}
    %li= link_to 'Cancel', attachments_path, :class => 'cancel_large'
    %li
      %input{ :type => 'submit', :value => 'Upload', :class => 'button' }
