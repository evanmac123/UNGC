%h3 Add Files
%h4= @submodel.title
= form_for :uploaded_attachments, url: upload_attachment_path do |form|
  %fieldset.file_inputs
    %ol
      %li
        = file_field_tag 'uploaded_attachments[][attachment]'
        = select_tag 'uploaded_attachments[][language_id]', options_from_collection_for_select(Language.all, :id, :name, Language.for(:english).id)

  %ul{:class => "tools inline", :style => 'float: right;'}
    %li= link_to 'Cancel', attachments_path, :class => 'cancel_large'
    %li
      %input{ :type => 'submit', :value => 'Upload', :class => 'button' }
