= default_form.error_messages
%fieldset
  %ol
    = default_form.text_field :name
    = default_form.text_field :url
    = default_form.select :organization_type_id, @organization_types.collect{|t| [t.name, t.id]}

    - if @organization_types.first.type_property == OrganizationType::BUSINESS
      #company_only{:style => "display:#{@organization.company? ? 'block' : 'none'}"}
        = default_form.select :listing_status_id, ListingStatus.all.collect{|t| [t.name, t.id]}
        #public_company_only{:style => "display:#{@organization.public_company? ? 'block' : 'none'}"}
          = default_form.select :exchange_id, Exchange.all.collect{|t| [t.name, t.id]}
          = default_form.text_field :stock_symbol
          = default_form.check_box :is_ft_500, :label => 'FT 500'
      = default_form.select :sector_id, option_groups_from_collection_for_select(Sector.top_level, :children, :name, :id, :name, @organization.sector_id)
    = default_form.text_field :employees
    = default_form.collection_select :country_id, Country.all, :id, :name

    - if @organization.commitment_letter
      %p
        Current Commitment letter:
        = link_to @organization.commitment_letter_file_name, @organization.commitment_letter.url

    = default_form.file_field :commitment_letter
