%h2 Accepted Participant Organizations
  
%p
  = link_to 'All', admin_organizations_path, :id => "show_all", :class => "restrictions"
  |
  = link_to 'Approved', approved_admin_organizations_path, :id => "show_approved", :class => "restrictions"
  |
  = link_to 'Rejected', rejected_admin_organizations_path, :id => "show_rejected", :class => "restrictions"
  |
  = link_to 'In Review', in_review_admin_organizations_path, :id => "show_in_review", :class => "restrictions"
  |
  = link_to 'Network Review', network_review_admin_organizations_path, :id => "show_network_review", :class => "restrictions"
  |
  = link_to 'Pending', pending_review_admin_organizations_path, :id => "show_pending", :class => "restrictions"

%table.dashboard_table
  %tr
    %th ID
    %th Old ID
    %th= sort_header 'Name', field: 'name', direction: 'ASC'
    %th= sort_header 'Status', field: 'cop_state'
    %th Updated by
    %th Actions

  - @organizations.each do |organization|
    - if organization.participant
      %tr
        %td=h organization.id
        %td=h organization.old_id || organization.old_tmp_id
        %td{:title => organization.name}=h truncate(organization.name)
        %td=h organization.cop_state.humanize
        %td=h organization.last_modified_by_full_name
        %td
          %ul.actions
            %li 
              = link_to 'Show', admin_organization_path(organization.id), :class => "preview", :title => "Show"
            %li 
              = link_to 'Edit', edit_admin_organization_path(organization.id), :class => "edit", :title => "Edit"
            %li 
              = link_to 'Destroy', admin_organization_path(organization.id), :class => "delete", :title => "Delete", :confirm => 'Are you sure?', :method => :delete

= will_paginate @organizations

%br/

= link_to 'New organization', new_admin_organization_path
