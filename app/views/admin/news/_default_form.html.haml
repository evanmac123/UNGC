- if default_form.error_messages.present?
  %h3 Sorry, the Headline was not saved. Please provide all required information:
  %div{:class => 'flash error'}
    %ul
      - @headline.errors.full_messages.each do |e|
        %li= e

%div{:class => "tab_container left_tabs"}
  %ul.tab_nav
    %li
      %a{:href => '#general'} General
    %li
      %a{:href => '#redesign_topics'} New Topics*
    %li
      %a{:href => '#redesign_issues'} Issues*
    %li
      %a{:href => '#redesign_sectors'} Sectors*

  #general.tab_content
    %fieldset
      %legend General Information
      %ol
        -# The order of class/label is important, see default_form_builder
        = default_form.text_field :title
        = default_form.text_field :published_on, {class: 'datepicker iso-date'}, {label: "Published on"}
        = default_form.text_field :location
        = default_form.collection_select :country_id, Country.all, :id, :name
        = default_form.text_area :description, {class: 'replace_with_editor', style: 'display:none'}, {label: "Body"}
        = default_form.select :headline_type, Headline.headline_types_for_select, {prompt: 'Select a headline type'}, { label: 'Type'}

  #redesign_topics.tab_content
    %fieldset
      %legend Topics
      - @headline.topic_options.each do |group, topics|
        %p= group.name
        - topics.each do |topic|
          %label{style:"temporary: yes; width: inherit; margin: inherit; float: none;"}
            = check_box_tag 'headline[topics][]', topic.id, topic.selected?
            = topic.name

  #redesign_issues.tab_content
    %fieldset
      %legend Issues
      - @headline.issue_options.each do |group, issues|
        %p= group.name
        - issues.each do |issue|
          %label{style:"temporary: yes; width: inherit; margin: inherit; float: none;"}
            = check_box_tag 'headline[issues][]', issue.id, issue.selected?
            = issue.name

  #redesign_sectors.tab_content
    %fieldset
      %legend Sectors
      - @headline.sector_options.each do |group, sectors|
        %p= group.name
        - sectors.each do |sector|
          %label{style:"temporary: yes; width: inherit; margin: inherit; float: none;"}
            = check_box_tag 'headline[sectors][]', sector.id, sector.selected?
            = sector.name
