%h3 News headlines

- if paged_headlines.any?
  %table
    %thead
      %tr
        %th Title
        %th Dates
        %th Location
        %th &nbsp;
    %tbody
      - for headline in paged_headlines do
        %tr
          %td= link_to headline.title, edit_admin_headline_path(headline)
          %td= headline.published_on || headline.approval
          %td= headline.full_location
          %td
            = link_to 'Approve', approve_admin_headline_path(headline), :class => 'link_to_post' if headline.can_approve?
            = link_to 'Revoke', revoke_admin_headline_path(headline), :class => 'link_to_post' if headline.can_revoke?
            = link_to 'Edit', edit_admin_headline_path(headline)
            = link_to 'Delete', admin_headline_path(headline), :class => 'link_to_destroy', :confirmation => 'Are you sure you want to delete this headline?'
          
= link_to 'Create a headline', new_admin_headline_path
