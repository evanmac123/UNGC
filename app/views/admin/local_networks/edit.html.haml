= form_for @local_network, builder: DefaultFormBuilder, url: admin_local_network_path(@local_network, section: @section), html: {multipart: true, novalidate: "novalidate"} do |form|
  = render partial: "#{@form_partial}", locals: {default_form: form}
  %p
  %ul{class: "tools inline", style: 'float: right;'}
    %li= link_to 'Cancel', admin_local_network_path(@local_network, tab: @section), class: 'cancel_large'
    %li= form.submit 'Save changes', class: 'button'
