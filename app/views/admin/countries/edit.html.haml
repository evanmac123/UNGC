%h2 Editing country

= form_for @country, builder: DefaultFormBuilder, url: admin_country_path(@country) do |form|
  = render :partial => form
  %ul{:class => "tools inline", :style => 'float: right;'}
    %li= link_to 'Cancel', admin_countries_path, :class => 'cancel_large'
    %li= form.submit 'Save changes', :class => 'button'
