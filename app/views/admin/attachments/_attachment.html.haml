%tr
  %td= link_to_uploaded_file(attachment)
  %td= number_to_human_size(attachment.attachment_file_size)
  %td= dd_month_yyyy attachment.updated_at
  %td
    %ul.actions
      %li= link_to 'Delete', attachment_path(attachment), :data => { :confirm => 'Are you sure you want to delete this file?' }, :method => :delete, :class => 'delete', :title => 'Delete file'

