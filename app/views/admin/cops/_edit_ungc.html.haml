= form_for(:communication_on_progress, url: admin_organization_communication_on_progress_path(@communication_on_progress.cop), html: {id:'cop_form', method: :put}) do |form|
  %ul
    %li= form.label :title
    %li= form.text_field :title
    %li= form.label :format
    %li= form.select :format, options_for_select(@communication_on_progress.formats.invert, @communication_on_progress.format)
    %li= form.label :starts_on
    %li= form.date_select :starts_on, order: [:month, :year], start_year: 2000, end_year: current_year, default: {year: current_year-1}
    %li= form.label :ends_on
    %li= form.date_select :ends_on, order: [:month, :year], start_year: 2000, end_year: current_year, default: {year: current_year-1}
    %li
      = form.label :include_continued_support_statement
      = form.check_box :include_continued_support_statement
    %li
      = form.label :references_human_rights
      = form.check_box :references_human_rights
    %li
      = form.label :references_labour
      = form.check_box :references_labour
    %li
      = form.label :references_environment
      = form.check_box :references_environment
    %li
      = form.label :references_anti_corruption
      = form.check_box :references_anti_corruption
    %li
      = form.label :include_measurement
      = form.check_box :include_measurement
    %li= form.label :method_shared
    %li= form.select :method_shared, options_for_select(@communication_on_progress.methods.invert, @communication_on_progress.method_shared)
    = form.submit 'Update'