- @body_class = 'details'

%h2== #{@communication.title} Details

%ul{:class => "tools inline"}

  %li= link_to "Back to #{@communication.acronym}s", @communication.return_path, :class => 'go_back_large'
  %li= link_to 'Public version', cop_detail_path(@communication.id), :class => 'web_preview_large'
  - staff_only do
    %li= link_to "Edit #{@communication.acronym}", edit_admin_cop_path(@communication), :class => 'edit_large', :title => "#{t('admin.edit_cop')}"
    %li= link_to "Delete #{@communication.acronym}", @communication.delete_path, :method => :delete, :class => 'delete_large', :confirm => "#{t('admin.confirm_cop_delete')}", :title => "#{t('admin.delete_cop')}"
    %li= link_to "Backdate #{@communication.acronym}", backdate_admin_organization_communication_on_progress_path(@organization, @communication.id), :class => 'web_preview_large'

.main_content
  #status_box
    %dl{style: 'width: 90%;'}
      = render partial: @communication.admin_partial, locals: { results_partial: @communication.results_partial, communication_on_progress: @communication }
  = action_links(@communication)
