%h2 Logo Requests in Review

.tab_container
  = render :partial => 'control_tabs'
  
  .tab_content
    %table.dashboard_table
      %tr
        %th ID
        %th Organization
        %th Created
        %th In review
        %th Latest activity
        %th Reviewer
        %th Actions
      - @logo_requests.each do |logo_request|
      / TODO remove after all old_id logo requests have been processed
      - @latest_comment_date = comment_date(logo_request.logo_comments.last)
        %tr
          %td=h logo_request.id
          %td{:title => logo_request.organization.name}= link_to truncate(logo_request.organization.name), edit_admin_organization_path(logo_request.organization.id)
          %td=h logo_request.created_at
          %td= pluralize((Date.today - logo_request.created_at.to_date).to_i, 'day')
          %td= pluralize((Date.today - @latest_comment_date.to_date).to_i, 'day')
          %td= Contact.find(logo_request.reviewer_id).name
          %td
            %ul.actions
              %li 
                = link_to 'Show', admin_organization_logo_request_path(logo_request.organization.id, logo_request), :class => "preview", :title => "Show"
              %li 
                = link_to 'Delete', admin_organization_logo_request_path(logo_request.organization.id, logo_request), :class => "delete", :title => "Delete", :confirm => 'Are you sure?', :method => :delete

    = will_paginate @logo_requests