%h2
  Page Details:
#page_tools
  %ul{class: @page ? '' : 'disabled'}
    %li= link_to 'Edit page', @page ? edit_admin_page_path(@page) : '#', class: 'edit_page', title: 'Edit page'
    %li= link_to 'Preview page', @page ? view_page_path(@page.to_path) : '#', class: 'preview_page', title: 'Preview page', target: '_blank'
    %li= link_to 'Save changes', @page ? admin_page_path(@page) : '#', class: 'save save_page', title: 'Save changes to this page'
    %li
      %a.visibility{ :title => "Show/hide", :href => "#" }
        Show/hide
    %li
      %a.approve{ :title => "Approve", :href => "#" }
        Approve
    %li
      %a.delete{ :title => "Delete", :href => "#" }
        Delete
#page_details.box
  %dl#pageDetailsReplace
    = render 'page_details' if @page
#page_preview
  #preview_contents.box
    #pageReplace.inside
      = render 'page' if @page
