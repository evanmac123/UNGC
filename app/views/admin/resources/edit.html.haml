%h2
  Edit Resource
  =truncate(@resource.title, :length => 60)

= form_for @resource, builder: DefaultFormBuilder, :url => admin_resource_path(@resource), :html => {:multipart => true} do |form|
  = render :partial => form

  %ul{:class => "tools inline", :style => 'float: right;'}
    %li= link_to 'Cancel', admin_resource_path(@resource), :class => 'cancel_large'
    %li= form.submit 'Create', :class => 'button'
