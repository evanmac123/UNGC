- @body_class = 'details'
%h2= truncate(@resource.title, :length => 60)

%div{:class => "tab_container top_tabs"}
  %ul.tab_nav
    %li <a href="#overview">Overview</a>

  #overview.tab_content.resources-show
    %ul{:class => "tools inline"}
      %li= link_to "Edit", edit_admin_resource_path(@resource.id), :class => 'edit_large'
      - if current_contact.is?(Role.website_editor)
        -if @resource.can_approve?
          %li= link_to "Approve", approve_admin_resource_path(@resource.id), :class => 'approve', :method => :post, :title => "Approve Resource"
        -if @resource.can_revoke?
          %li= link_to "Revoke", revoke_admin_resource_path(@resource.id), :class => 'revoke', :method => :post, :title => "Revoke Resource"


    %dl.left_column
      %h3 Resource Details
      %dt.first Title
      %dd.first= @resource.title
      %dt Year
      %dd= @resource.year.year rescue nil
      %dt Status
      %dd=h @resource.approval.humanize
      %dt Description
      %dd=@resource.description
      - if @resource.isbn?
        %dt Isbn
        %dd= @resource.isbn
      - if @resource.approved?
        %dt Published at
        %dd= @resource.approved_at
      - if @resource.image_url?
        %dt Image
        %dd= image_tag @resource.image_url

    %dl.left_column
      %h3 Authors
      %ol
        - @resource.authors.each do |a|
          %li= a.full_name

      %h3 Topics
      %ol
        - @resource.principles.each do |topic|
          %li= topic.name

      %h3 Links
      %ol.admin-resource-links
        - @resource.links.each do |link|
          %li
            %span.icon{:class => "#{link.link_type}"}
            = link_to link.title, link.url, target: '_blank'
            = link.language.name




= link_to raw("&larr; Back"), admin_resources_path
