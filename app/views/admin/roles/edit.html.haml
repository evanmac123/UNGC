%h2 Editing role

= form_for @role, builder: DefaultFormBuilder, url: admin_role_path(@role) do |form|
  = render :partial => form
  %ul{:class => "tools inline", :style => 'float: right;'}
    %li= link_to 'Cancel', admin_roles_path, :class => 'cancel_large'
    %li= form.submit 'Save changes', :class => 'button'