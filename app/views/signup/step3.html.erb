<%= render partial: 'redesign/components/meta_tags' %>
<%= render partial: 'redesign/components/hero' %>
<section class='main-content-section main-content-section-narrow'>
  <div class='wrapper'>
    <header class='main-content-header'>
      <h1><%= signup_type -%> Organization Application</h1>
    </header>

    <%= form_for(@signup.ceo, url: @next_step, html: {class: 'form-classic'}) do |form| %>
      <%= form.error_messages header_message: false %>

      <h2>Highest Level Executive</h2>

      <p>The Highest Level Executive (Chief Executive Officer or equivalent) signs the Letter of Commitment for your organization. After your application is reviewed and accepted, this person will receive official documents such as policy updates, reports, and invitations to special events via postal mail.</p>

      <%= render partial: 'contact_form', locals: { form: form, account_info: false, contact_type: 'Highest Level Executive', financial_contact: false, welcome_package: true } %>

      <%= form.submit 'Next', class: 'button' %>

    <%- end -%>
  </div>
</section>
