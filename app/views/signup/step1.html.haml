%h1 Organization Registration

%h2 About your organization

- form_for(@organization, :url => organization_step2_path) do |form|
  = form.error_messages
  = form.text_field :name, {:label => "Name of organization" }
  = form.text_field :url, {:label => "Website" }
  = form.select :organization_type_id, @organization_types.collect{|t| [t.name, t.id]}, {:label => "Type of organization", }

  - if @organization_types.first.type_property == OrganizationType::BUSINESS
    = form.select :listing_status_id, ListingStatus.all.collect{|t| [t.name, t.id]}, {:label => "Ownership"}
    #public_company_only{:style => "display:#{@organization.public_company? ? 'block' : 'none'}"}
      = form.check_box :is_ft_500, :label => 'Financial Times 500'
      = form.select :exchange_id, Exchange.all.collect{|t| [t.name, t.id]}
      = form.text_field :stock_symbol
  - if @organization_types.first.type_property == OrganizationType::BUSINESS
    = form.select :sector_id, option_groups_from_collection_for_select(Sector.top_level, :children, :name, :id, :name, @organization.sector_id)
  = form.text_field :employees, {:label => "Number of employees"}
  = form.collection_select :country_id, Country.all, :id, :name
  
  %p
    = form.submit 'Next'