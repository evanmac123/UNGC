%h1 Participant Search

- form_tag nil, method: 'get' do
  %p
    %label Participant Name
    %br/
    = text_field_tag :keyword
  %p
    %label Country
    %br/
    = select_tag :country, countries_for_select, :multiple => true, :size => 6
  %hr/
  %p
    %label Type of Participant
  %p
    #hide_business_and_stakeholders
      = radio_button_tag :business_type, :all, true
      %label{:for => 'business_type_all'} All participants
    
    #business_only
      = radio_button_tag :business_type, OrganizationType::BUSINESS
      %label{:for => "business_type_#{OrganizationType::BUSINESS}"} Business participants
    
    #stakeholders_only
      = radio_button_tag :business_type, OrganizationType::NON_BUSINESS
      %label{:for => "business_type_#{OrganizationType::NON_BUSINESS}"} Non-business participants
  %hr/
  %div.for_business_only{:style=>'display:none'}
    %h3 For Business Participants
    %p
      %label{:for => 'sector_id'} Sector
      %br/
      = select_tag :sector_id, sectors_for_select
    %p
      %label Communication on Progress status:
      %br/
      = radio_button_tag :cop_status, :all, true
      %label{:for => 'cop_status_all'} All
      = radio_button_tag :cop_status, Organization::COP_STATES[:active]
      %label{:for => "cop_status_#{Organization::COP_STATES[:active]}"} Active
      = radio_button_tag :cop_status, Organization::COP_STATES[:noncommunicating]
      %label{:for => "cop_status_#{Organization::COP_STATES[:noncommunicating]}"} Non-Communicating
      -# = radio_button_tag :cop_status, Organization::COP_STATES[:inactive]
      -# %label{:for => "cop_status_#{Organization::COP_STATES[:inactive]}"} Inactive
  %div.for_stakeholders_only{:style=>'display:none'}
    %h3 For Non-business Participants
    %p
      %label Select a specific organization type:
      = select_tag :organization_type_id, organization_types_for_select
  %p
    = submit_tag 'Search'
    