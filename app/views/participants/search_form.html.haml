%h1 Participant Search

- form_tag nil, method: 'get' do
  %p
    %label Participant Name
    %br/
    = text_field_tag :keyword
  %p
    %label Country
    %br/
    = select_tag :country, countries_for_select, :multiple => true, :size => 6
  %hr/
  %p
    %label Type of Participant
  %p
    = radio_button_tag :business_type, :all, true
    %label#hide_business_and_stakeholders{:for => 'business_type_all'} All participants
    = radio_button_tag :business_type, OrganizationType::BUSINESS
    %label#business_only{:for => "business_type_#{OrganizationType::BUSINESS}"} Business participants only
    = radio_button_tag :business_type, OrganizationType::NON_BUSINESS
    %label#stakeholders_only{:for => "business_type_#{OrganizationType::NON_BUSINESS}"} Other Stakeholders only
  %hr/
  %div.for_business_only{:style=>'display:none'}
    %h3 For Business Participants
    %p
      %label Communication on Progress Status
    %p
      = radio_button_tag :cop_status, :all, true
      %label{:for => 'cop_status_all'} All Active &amp; Non-Communicating
      = radio_button_tag :cop_status, Organization::COP_STATUSES[:active]
      %label{:for => "cop_status_#{Organization::COP_STATUSES[:active]}"} Active
      = radio_button_tag :cop_status, Organization::COP_STATUSES[:noncommunicating]
      %label{:for => "cop_status_#{Organization::COP_STATUSES[:noncommunicating]}"} Non-Communicating
      = radio_button_tag :cop_status, Organization::COP_STATUSES[:inactive]
      %label{:for => "cop_status_#{Organization::COP_STATUSES[:inactive]}"} Inactive
  %div.for_stakeholders_only{:style=>'display:none'}
    %h3 For Stakeholders
    %p
      %label Option to select a specific organization type
    %p
      = select_tag :organization_type_id, organization_types_for_select
  %p
    = submit_tag 'Search'
    