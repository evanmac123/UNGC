!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml", :"xml:lang" => "en", :lang => "en"}
  %head
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}/
    - if home_page?
      %link{:href => 'http://feeds.unglobalcompact.org/UnitedNationsGlobalCompact-LatestNews', :rel => 'alternate', :title => 'United Nations Global Compact - Latest News', :type => 'application/atom+xml'}
    %title= (@title || 'United Nations Global Compact').html_safe
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'print', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'ie'

    = javascript_include_tag 'application'
    - if Rails.env.production?
      = javascript_include_tag 'google_analytics'

  %body{:class => "#{ENV["RAILS_ENV"]} #{body_classes}"}
    = render :partial => 'layouts/ie_lte6'
    = render :partial => 'layouts/header'
    #content_bg
      #content_inner
        = render :partial => 'layouts/inner_head'
        #inner_body
          #leftnav= render :partial => 'layouts/leftnav'
          #rightcontent
            .path
              %p= breadcrumbs
            .copy
              = yield
    = render :partial => 'layouts/footer'
