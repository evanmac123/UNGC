#header
  #header_content
    #logo
      %a{ :href => "/index.html", :title => "United Nations Global Compact" }
        %img{ :src => "/images/logo.png", :alt => "United Nations Global Compact" }
    #languages
      %ul
        %li.arabic=     link_to '', '/Languages/arabic/'
        %li.chinese=    link_to '', '/Languages/chinese/'
        %li.french=     link_to '', '/Languages/french/'
        %li.russian=    link_to '', '/Languages/russian/'
        %li.spanish=    link_to '', '/Languages/spanish/'
        %li.german=     link_to '', '/Languages/german/'
        %li.portuguese= link_to '', '/Languages/portuguese/'
    #search
      %form{ :name => "search", :action => "/search", :method => "get" }
        %input.search_box{ :name => "keyword", :type => "text" }
        %input.search_submit{ :name => "submit", :src => "/images/search_submit.png", :type => "image", :alt => "Search" }
        %p
          %input#search_radio1{ :checked => "checked", :name => "target", :type => "radio", :value => "" }
          %label{ :for => "search_radio1", :style => 'margin-right: 10px;' } Search website
          %input#search_radio2{ :name => "target", :type => "radio", :value => participant_search_path, :checked => participant_search?(:participant) }
          %label{ :for => "search_radio2" } Search participants
