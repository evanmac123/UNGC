!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml", :"xml:lang" => "en", :lang => "en"}
  %head
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}/
    = csrf_meta_tags unless cached_page?
    - if home_page?
      %link{:href => 'http://feeds.unglobalcompact.org/UnitedNationsGlobalCompact-LatestNews', :rel => 'alternate', :title => 'United Nations Global Compact - Latest News', :type => 'application/atom+xml'}
    %title= (@title || 'United Nations Global Compact').html_safe
    = stylesheet_link_tag 'application', 'public-resources'
    = stylesheet_link_tag 'print', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'ie'

    = javascript_include_tag 'application'
    - if Rails.env.production?
      = javascript_include_tag 'google_analytics'

  %body{:class => "#{ENV["RAILS_ENV"]} #{body_classes}"}
    = render :partial => 'layouts/ie_lte6'
    = render :partial => 'layouts/header'
    #content_bg
      #content_inner
        #inner_head.fullscreen
          %p.print
            %a{ :href => "javascript:window.print();" }
              Print
          %p.send
            %a{ :href => "mailto:?subject=#{@title}&body=The%20following%20page%20is%20available%20on%20the%20United%20Nations%20Global%20Compact%20website:%0A%0A#{url_for(:only_path => false)}"}
              Email
        #inner_body.fullscreen
          #rightcontent.fullscreen
            .path
              %p= breadcrumbs
            .copy
              = yield
    = render :partial => 'layouts/footer'
    = render :partial => 'shared/ga_universal'
