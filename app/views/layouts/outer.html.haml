!!!
%html
  %head
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}/
    %title= @title || 'United Nations Global Compact'
    = stylesheet_link_tag 'application', 'jquery-ui'
    - (@css || []).each do |file|
      = stylesheet_link_tag file
    = stylesheet_link_tag 'print', :media => 'print'
  %body{:class => "#{ENV["RAILS_ENV"]} #{body_classes}"}
    = render :partial => 'layouts/header'
    = yield
    = render :partial => 'layouts/footer'
    = javascript_tag "var AUTH_TOKEN = '#{form_authenticity_token}';" if protect_against_forgery?
    = javascript_include_tag 'jquery', 'jquery-ui', 'application'
    - (@javascript || []).each do |file|
      = javascript_include_tag file
  