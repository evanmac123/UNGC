!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml", :"xml:lang" => "en", :lang => "en"}
  %head
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}/
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=EmulateIE7'}/
    %title= @title || "United Nations Global Compact | #{controller.controller_name.titleize} | #{controller.action_name.titleize}"
    = stylesheet_link_tag 'reset', 'grid', 'typography', 'forms', 'jquery-ui', 'admin'
    /[if IE]
      = stylesheet_link_tag 'ie'
    - (@css || []).each do |file|
      = stylesheet_link_tag file
    = stylesheet_link_tag 'print', :media => 'print'

  %body{:class => (@body_class || "form")}
    .container
      - if logged_in? and current_user.from_ungc?
        %form#search{ :name => "search", :action => "/admin/organizations/search", :method => "get" }
          = hidden_field_tag 'commit', 'Search'
          %input.search_box{ :id => 'admin_search', :name => "keyword", :type => "text", :value => "Search organizations"}
          %input.search_submit{ :name => "submit", :src => "/images/search_submit.png", :type => "image", :alt => "Search" }

      %h1#page_header
        %a{:href => '/'}
          %img{:src => '/images/logo.png', :style => 'margin-left: 2px; margin-top: 15px; margin-bottom: 15px;'}/

      = render :partial => 'layouts/main_nav'

      - if logged_in?
        #session_info{:style => 'display: none;'}
          %h2
            %a{:href => '#', :class => 'slider'}
              Login status
          %ul
            %li.logged_in_as
              You are logged in as: <br />
              = link_to current_user.name, "#", :class => "username"
              = link_to "[Log out]", logout_path, :method => :delete, :title => "Log out"

      #main_content.span-24
        = flash_messages_for :error, :notice
        = yield

      #footer.span-24
        &nbsp;

    = javascript_tag "var AUTH_TOKEN = '#{form_authenticity_token}';" if protect_against_forgery?
    = javascript_include_tag 'jquery', 'jquery-ui', 'application', 'jquery.parsequery.min','dashboard'
    - (@javascript || []).each do |file|
      = javascript_include_tag file
    - postscript = yield :postscript
    - if postscript
      = postscript
