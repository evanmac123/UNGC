<%= form_for search, as: :search, url: redesign_participant_search_path, method: :get do |f| %>

  <%= render 'redesign/components/filter_options_list', label: 'Type', filter: 'organization_type', options: @search.organization_type_options %>

  <%= render 'redesign/components/filter_options_list', label: 'Initiative', filter: 'initiative', options: @search.initiative_options %>

  <%= render 'redesign/components/filter_options_list', label: 'Geography', filter: 'geography', options: @search.geography_options %>

  <%= f.submit 'Search' %>

<% end %>
