<% @facets.each do |facet, facet_options| %>
  <h5><%= facet %></h5>
  <ul>
  <% Array(facet_options).each do |option, count| %>
    <li><%= link_to "#{option} (#{count})",
      :params => {"#{facet}[]" => option, :page => 1} %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @search, as: :search, url: redesign_participant_search_path, method: :get, html: {class: 'library-filters-form'} do |f| %>

  <%#= f.select :organization_type, @search.organization_type_options %>
  <%#= f.select :initiative, @search.initiative_options %>
  <%#= f.select :country, @search.geography_options %>
  <%= f.submit 'Search' %>

<% end %>
