<% provide :title, @page.meta_title %>
<% provide :description, @page.meta_description %>

<%= render 'redesign/components/hero' %>

<%= render layout: 'redesign/components/content_blocks', locals: {blocks: @page.issues} do |block| %>
  <%= render 'redesign/components/content_block', title: block.title, url: block.url, thumbnail: block.thumbnail, tag: t(block.issue) %>
<% end %>
