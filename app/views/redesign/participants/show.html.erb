<%= render partial: 'redesign/components/meta_tags' %>
<%= render partial: 'redesign/components/hero' %>

<section class='main-content-section main-content-section-wide participants-show-main-content'>
  <header class='main-content-header'>
    <h1><%= @page.name %></h1>
    <%= link_to(@page.website, @page.website_url, class: 'participant-website-link') if @page.has_website? %>
  </header>

  <section class='tabbed-component participant-detail-body'>
    <menu class='tabs'>
      <li class='tab'>
        <button type="button" class='active' data-tab-content='company-information'>Company Information</button>
      </li>
      <li class='tab'>
        <button type="button" data-tab-content='cop'>COP</button>
      </li>
      <li class='tab'>
        <button type="button" data-tab-content='contributions'>Contributions</button>
      </li>
    </menu>

    <article class='tab-content company-information active'>
      <header class='tab-content-header'>
        <h1>Company Information</h1>
      </header>

      <div class='tab-content-sub-section company-information-overview'>
        <h2>Overview</h2>

        <dl>
          <dt>Country:</dt>
          <dd><%= @page.country -%></dd>
          <dt>Org. Type:</dt>
          <dd><%= @page.type -%></dd>
          <dt>Sector:</dt>
          <dd><%= @page.sector -%></dd>
          <dt>Differentiation Level:</dt>
          <dd><%= @page.differentiation_level -%></dd>
          <dt>Employees:</dt>
          <dd><%= @page.employees -%></dd>
          <dt>Ownership:</dt>
          <dd><%= @page.ownership -%></dd>
        </dl>

        <%= link_to('Letter of Commitment', @page.commitment_letter.url) if @page.commitment_letter.present? %>
      </div>


      <div class='tab-content-sub-section company-information-financial-information'>
        <h2>Financial Information</h2>
        <%= render('redesign/components/widget_links_lists', links_lists: @page.financial_information) if @page.financial_information %>

        <hr>

        <h2>Non-Financial Information</h2>
        <%= render('redesign/components/widget_links_lists', links_lists: @page.financial_information) if @page.financial_information %>
      </div>

      <div class='tab-content-sub-section company-information-since'>
        <h3>Participant Since</h3>
        <time><%= @page.joined_on -%></time>
      </div>
    </article>

    <article class='tab-content cop'>
      <header class='tab-content-header'>
        <h1>COP</h1>
      </header>
      <h3>Communication on Progress</h3>

      <table>
        <thead>
          <th>Year</th>
          <th>Published On</th>
          <th>Title</th>
          <th>Level</th>
        </thead>
        <tbody>
          <% @page.cops.each do |cop| %>
            <tr>
              <th><%= cop.year %></th>
              <th><%= cop.published_on %></th>
              <th><%= link_to cop.title, cop_detail_path(cop) %></th>
              <th><%= cop.differentiation_level_name %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </article>

    <article class='tab-content contributions'>
      <header class='tab-content-header'>
        <h1>Contributions</h1>
      </header>
      <h3>Voluntary Contributions</h3>

      <table>
        <thead>
          <th>Year</th>
          <th>Contribution Received</th>
        </thead>
        <tbody>
          <% @page.contributions.each do |year, campaigns| %>
            <tr>
              <td><%= year %></td>
              <td>
                <ul>
                  <% campaigns.each do |campaign| %>
                    <li><%= campaign.name %></li>
                  <% end %>
                </ul>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </article>
  </section>
</section>




