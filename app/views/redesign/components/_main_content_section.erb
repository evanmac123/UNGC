<section class='main-content-section <%= content[:classes] -%>' style="<%= content[:styles] -%>">

  <%= content_tag(:header, content_tag(:h1, content[:title]), {class: 'main-content-header'}) if content[:title] %>

  <section class='main-content-body'>
    <%- if principles = content[:principles] -%>
      <aside class='main-content-principles-list'>
        Tied to Principles:
        <ol>
          <%- principles.each do |principle| -%>
          <li>
            <span class='principle-number'></span>
            <span class='principle-detail'>
              <%= principle %>
            </span>
          </li>
          <%- end -%>
        </ol>
      </aside>
    <%- end -%>

    <%= content[:content].html_safe if content[:content] %>

    <%= content_tag(:p, link_to(content[:call_to_action][:title], content[:call_to_action][:url], class: "button #{content[:call_to_action][:theme]}")) if content[:call_to_action] %>
  </section>

  <%= yield %>
</section>
