<ol class='library-filter-options-list'>
  <%- if child_options_field ||= nil -%>
    <%- options.each do |parent_option, child_options| -%>
      <%= render layout: 'redesign/components/library_filter_option', locals: {field_name: "#{options_field}[#{parent_option.id}]", option: parent_option} do %>
        <%= render 'redesign/components/library_filter_options_list', options: child_options, options_field: child_options_field %>
      <%- end -%>
    <%- end -%>
  <%- else -%>
    <%- options.each do |option| -%>
      <%= render 'redesign/components/library_filter_option', field_name: "#{options_field}[#{option.id}]", option: option %>
    <%- end -%>
  <%- end -%>
</ol>
