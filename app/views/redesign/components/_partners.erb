<%- if partners = @page.partners and !partners.empty?-%>
<section class='component-partners'>
  <div class='wrapper'>
    <%- if title ||= nil -%>
      <header class='component-header'>
        <%= content_tag(:h1, title.try(:html_safe)) %>
      </header>
    <%- end -%>

    <ul class='component-partners-list'>
      <%- partners.each do |partner| -%>
        <li><%= link_to image_tag(partner.logo, alt: partner.name), partner.url, target: (partner.external ? "_blank" : "") %></li>
      <%- end -%>
    </ul>
  </div>
</section>
<%- end -%>
