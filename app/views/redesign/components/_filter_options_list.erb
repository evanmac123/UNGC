<%- list_level = (child_filter ||= nil) ? :parent : :child -%>
<ol class='<%= "filter-options-list filter-#{list_level.to_s}-options-list" -%>' data-filter='<%= filter -%>'>
  <%- options.each do |option, child_options| -%>
    <%= render layout: 'redesign/components/filter_option', locals: {filter: filter, option: option} do %>
      <%= render('redesign/components/filter_options_list', filter: child_filter, options: child_options) if child_filter && child_options  %>
    <%- end %>
  <%- end -%>
</ol>
