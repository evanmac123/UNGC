<header id="main-header">
  <%= link_to '/redesign', class: 'logo' do %>
    <h1><span>United Nations Global Compact</span></h1>
  <% end %>

  <nav>
    <ul id='primary-navigation'>
      <li><%= link_to_redesign 'What Is UN Global Compact?', '/what-is-gc', class: "nav-link #{request.fullpath =~ /\A\/redesign\/what-is-gc/ ? 'active' : nil}" -%></li>
      <li><%= link_to_redesign 'Participation', '/participation', class: "nav-link #{request.fullpath =~ /\A\/redesign\/participation/ ? 'active' : nil}" -%></li>
      <li><%= link_to_redesign 'Take Action', '/take-action', class: "nav-link #{request.fullpath =~ /\A\/redesign\/take-action/ ? 'active' : nil}" -%></li>
      <li><%= link_to_redesign 'Engage Locally', '/engage-locally', class: "nav-link #{request.fullpath =~ /\A\/redesign\/engage-locally/ ? 'active' : nil}" -%></li>
      <li><%= link_to_redesign 'Explore Our Library', '/library', class: "nav-link #{params[:controller] == 'redesign/library' ? 'active' : nil}" -%></li>
    </ul>

    <ul id='secondary-navigation'>
      <li><%= link_to_redesign 'About', '/about', class: "nav-link #{params[:action] == 'long_article' ? 'active' : nil}" -%></li>
      <li><%= link_to_redesign 'News', redesign_news_index_path, class: "nav-link" -%></li>
      <li><%= link_to 'Sign In', '/login', class: "nav-link" -%></li>
      <li id="google_translate_element"></li>
    </ul>
  </nav>

  <form id='main-search'>
    <div id='main-search-filters'>
      <fieldset>
        <%= radio_button_tag :'search-filter', value: 'all',       id: 'search-filter-all', checked: true -%>
        <label for="search-filter-all"> All</label>
        <%= radio_button_tag :'search-filter', value: 'events',    id: 'search-filter-events' -%>
        <label for="search-filter-events">Events</label>
        <%= radio_button_tag :'search-filter', value: 'news',      id: 'search-filter-news' -%>
        <label for="search-filter-news">News</label>
        <%= radio_button_tag :'search-filter', value: 'cops',      id: 'search-filter-cops' -%>
        <label for="search-filter-cops">COPs</label>
        <%= radio_button_tag :'search-filter', value: 'companies', id: 'search-filter-companies' -%>
        <label for="search-filter-companies">Companies</label>
      </fieldset>
    </div>
    <%= text_field_tag :search, nil, placeholder: 'Search', class: 'search-field' -%>
    <button type="submit" class='search-button'><span>Search</span></button>
  </form>
</header>
