<%- if participants ||= nil -%>
  <% participants.no_results do %>
    No results.
  <% end %>

  <% participants.with_results do |results| %>
    <table class='participants-table'>
      <thead>
        <tr>
          <th class='sort-direction-toggle' data-field='name'>Name</th>
          <th class='sort-direction-toggle' data-field='type'>Type</th>
          <th class='sort-direction-toggle' data-field='sector'>Sector</th>
          <th class='sort-direction-toggle' data-field='country'>Country</th>
          <th class='sort-direction-toggle' data-field='company-size'>Company Size</th>
          <th class='sort-direction-toggle' data-field='date-joined'>Joined On</th>
        </tr>
      </thead>
      <tbody>
        <% results.each do |participant| %>
          <tr>
            <th class='name'><%= link_to participant.name, redesign_participant_path(participant) %></th>
            <td class='type'><%= participant.type %></td>
            <td class='sector'><%= participant.sector %></td>
            <td class='country'><%= participant.country %></td>
            <td class='company-size'><%= participant.company_size %></td>
            <td class='date-joined'><%= participant.joined_on %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate participants, previous_label: "<span>Previous</span>", next_label: "<span>Next</span>" %>
  <% end %>
<%- end -%>
