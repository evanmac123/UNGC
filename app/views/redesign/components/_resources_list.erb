<%- if resources ||= nil -%>
<ul class='resources-list'>
  <%- resources.each do |r| -%>
  <li class='resource-block'>
    <%= link_to redesign_library_resource_path(r), class: "resource-block-link #{r.content_type.try(:parameterize)}" do %>
      <div class='resource-block-image' style='background-image: url(<%= "//unglobalcompact.org#{r.cover_image(:show, retina: true)}" -%>)'>
        <%= image_tag "//unglobalcompact.org#{r.cover_image(:show, retina: true)}" %>
      </div>
      <h2 class='resource-block-title'><span><%= r.title -%></span></h2>
      <div class='resource-block-tag'><%= t r.content_type -%></div>
    <% end %>
  </li>
  <%- end -%>
</ul>
<%- end -%>
