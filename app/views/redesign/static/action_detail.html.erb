<%= render partial: 'redesign/components/hero' %>

<%= render layout: 'redesign/components/main_content_section', locals: {content: @page.main_content_section} do %>
  <%= render layout: 'redesign/components/sidebar' do %>
    <%= render('redesign/components/widget_contact', contact: @page.sidebar_widgets[:contact]) if @page.sidebar_widgets[:contact] %>

    <%= render('redesign/components/widget_calls_to_action', calls_to_action: @page.sidebar_widgets[:calls_to_action]) if @page.sidebar_widgets[:calls_to_action] %>
  <% end %>
<% end %>

<%= render layout: 'redesign/components/content_blocks', locals: {title: @page.related_content.title} do %>
  <%- @page.related_content.boxes.each do |block| -%>
    <%= render 'redesign/components/content_block', title: block.title, url: block.url, thumbnail: block.thumbnail, tag: t(block.issue) %>
  <%- end -%>
<% end %>

<%= render layout: 'redesign/components/content_blocks', locals: {title: 'From Our Library'} do %>
  <%- @page.resources.each do |resource| -%>
    <%= render 'redesign/components/content_block', type: 'resource', title: resource.title, url: redesign_library_resource_path(resource), thumbnail: "//unglobalcompact.org#{resource.cover_image(:show, retina: true)}", tag: t(resource.content_type) %>
  <%- end -%>
<% end %>

<%= render partial: 'redesign/components/events_news' %>

<%= render 'redesign/components/participants_table', title: 'Participants' %>
