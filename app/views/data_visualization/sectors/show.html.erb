<style>
#donut-chart {
        height: 500px;
				margin: 0 auto;
        position: relative;
        width: 750px;
			}
.tooltip {
        background: #eee;
        box-shadow: 0 0 5px #999999;
        color: #333;
        display: none;
        font-size: 12px;
        left: 275px;
        padding: 10px;
        position: absolute;
        text-align: center;
        top: 550px;
        width: 150px;
        z-index: 10;
      }
.legend {
    font-size: 12px;
  }
  rect {
		cursor: pointer;
    stroke-width: 1;
  }
	rect.disabled {
  	fill: transparent !important;
	}
  .toolTip {
  	position: absolute;
    pointer-events: none;
    display: none;
    min-width: 50px;
    height: auto;
    background: none repeat scroll 0 0 #ffffff;
    padding: 9px 14px 6px 14px;
    border-radius: 2px;
    text-align: center;
    line-height: 1.3;
    color: #5B6770;
    box-shadow: 0px 3px 9px rgba(0, 0, 0, .15);
  }
  .toolTip:after {
    content: "";
    width: 0;
    height: 0;
    border-left: 12px solid transparent;
    border-right: 12px solid transparent;
    border-top: 12px solid white;
    position: absolute;
    bottom: -10px;
    left: 50%;
    margin-left: -12px;
  }
  .toolTip span {
  	font-weight: 500;
    color: #081F2C;
  }

  #sector-growth .axis line {
	stroke-opacity: .5;
	stroke: #fff;
}

#sector-growth .axis text {
	font: 10px sans-serif;
}

#sector-growth .x text {
  text-anchor: end;
}

#sector-growth .background {
  fill: #bfbfbf;
  fill-opacity: .75;
}

#sector-growth .domain {
	fill: none;
	stroke: #000;
}

#sector-growth .dots {
	fill: steelblue;
  stroke: #fff;
}

#sector-growth .sectorLine {
	fill: none;
	stroke: steelblue;
	stroke-width: 3;
}

#sectorButtons {
  max-width: 800px;
}


  .circle-label {
    font: 12px sans-serif;
    opacity: 0;
  }
  .dropdown {
    margin-bottom: 10px;
  }
  .title {
	   font: 20px sans-serif;
     margin-bottom: 10px;
  }
  .y path {
    fill: #efefef;
  }

  .x path {
    fill: #efefef;
  }
  .axis line {
    stroke: #bfbfbf;
    stroke-dasharray: 1;
	  stroke-opacity: .5;
  }

</style>

<div id="sdg-charts-page">
<section class="main-content-section align-center light-theme" style="">
    <div class="full-width-wrapper">
      <div class="wrapper">
        <header class="main-content-header"><h1>Explore the Sector data in <%= @country.name %></h1></header>
        <section class="main-content-body">
          <div id="data-vis">
            <div id="dount-chart"></div>
            <div id="sector-organization"></div>
            <div id='sector-dropdown'></div>
            <div id="sector-growth"></div>
          </div>
        </section>
      </div>
    </div>
  </section>
</div>

<script>

$(function() {
	var sectorCount = <%= raw @business_sector_count.to_json %>;
	drawSectorPercentage(sectorCount);
  drawOrganizationSector(sectorCount);
});

$(function() {
  var sectorGrowth = <%= raw @business_sector_growth.to_json %>;
  drawSectorGrowthChart(sectorGrowth);
});
</script>
