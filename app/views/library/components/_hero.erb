<%-
  hero_data = begin
    local_assigns[:hero] || @page.hero
  rescue
    nil
  end
-%>
<%- if hero_data
  hero_classes = ['page-section']
  hero_classes << "hero-size-#{hero_data[:size]}" if hero_data[:size]
  -%>
  <header id='hero' class='<%= hero_classes.join(' ') -%>'>
    <div class='wrapper'>
      <div class='hero-content-wrapper'>
        <%- if hero_data[:title] -%>
          <h1><%- hero_data[:title].each do |key, value| -%>
            <%#= tag(:br) if value -%>
            <%= content_tag(:div, value.try(:html_safe), {class: 'hero-title'}) if value -%>
          <%- end -%></h1>
        <%- end -%>
         <%= content_tag(:p, hero_data[:blurb].html_safe, {class: 'blurb'}) if hero_data[:blurb] %>
        <div class='hero-search'>
           <h2 class="issue-search-link">
             Search by Issues
           </h2>
           <a class="title-search-link" href="">
             Title Search
           </a>
           <div class="issue-search">
             <a class="issue-search-button" href=""> Taking Action on the Global Goals </a>
             <a class="issue-search-button" href=""> Responsible Investment </a>
             <a class="issue-search-button" href=""> Global Goverance </a>
             <a class="issue-search-button" href=""> Human & Labour Right in Global Supply Chains </a>
             <a class="issue-search-button" href=""> Sustainable Management Practice </a>
             <a class="issue-search-button" href=""> Accelerating Climate Change </a>
           </div>
        </div>
      </div>
    </div>
  </header>
  <%- end -%>
