= render partial: 'components/meta_tags'
= render partial: 'components/hero'
= render 'form'
= render layout: 'components/content_blocks', locals: {classes: 'library', blocks: @results} do |block|
  = render 'components/resource_block', block: block
- if @results.empty?
  %section.main-content-section.main-content-section-wide
    .wrapper
      %h2 No results found.
= will_paginate @results, previous_label: "<span>Previous</span>", next_label: "<span>Next</span>"