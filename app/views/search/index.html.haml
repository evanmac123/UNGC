%h1 Search results
- if @facets.any? && @facets[:document_type].size > 0
  %ul.search_facets
    - @facets[:document_type].sort.map do |key, count|
      - css_class = key == params[:document_type] ? 'facet_selected' : 'facet_unselected'
      %li= link_to "#{pretty_facet_label(key)} (#{count})", params.merge(:document_type => key, :page => 1), :class => css_class

  %p
    %h3= "#{results_description(params)} matching '#{h params[:keyword]}'"

- if @results.any?
  - for result in @results do
    - if result
      .search_results
        %div{:style => 'font-weight: bold; color: blue;'}
          = link_to result.title.force_encoding("UTF-8"), result.url
        %div
          = format result
  %div
    = will_paginate @results
- else
  %h3= "Sorry, there are no results for '#{h params[:keyword]}'"
  %p== Please try a new search. If you are looking for a specific organization, the #{link_to 'Participant Search', DEFAULTS[:participant_search_path]} is also available.
  
  = form_tag nil, method: :get do
    = text_field_tag :keyword, params[:keyword]
    = submit_tag 'Search again'
  
