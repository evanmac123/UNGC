<VirtualHost *:80>
  ServerName <%= configuration[:webdav][:domain] %>
  DocumentRoot /srv/unglobalcompact/shared/public

  <Directory /srv/unglobalcompact/shared/public>
    DAV Off
    Options -Indexes
    Header set X-Robots-Tag "noindex, nofollow"
  </Directory>

  <Files /srv/unglobalcompact/shared/public/*>
    Header set X-Robots-Tag "noindex, nofolllow"
  </Files>

  <Directory /srv/unglobalcompact/shared/public/pics>
    DAV On
    AuthType Basic
    AuthName "webdav"
    AuthUserFile /srv/unglobalcompact/shared/config/passwd.dav
    Require valid-user
  </Directory>

  <Directory /srv/unglobalcompact/shared/public/docs>
    DAV On
    AuthType Basic
    AuthName "webdav"
    AuthUserFile /srv/unglobalcompact/shared/config/passwd.dav
    Require valid-user
  </Directory>
</VirtualHost>
